{
  "openapi": "3.0.3",
  "info": {
    "title": "AI Document Summarization API",
    "version": "1.0.0",
    "description": "API for uploading documents, extracting text, and analyzing with LLMs."
  },
  "paths": {
    "/documents/upload": {
      "post": {
        "summary": "Upload a PDF or DOCX document (max 5MB)",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "array",
                    "items": { "type": "string", "format": "binary" }
                  }
                },
                "required": ["file"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Documents uploaded and stored. Response contains an array of `{file_info, metadata, analysis}` in `data`.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "statusCode": { "type": "integer" },
                    "message": { "type": "object" },
                    "data": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/DocumentDetail" }
                    }
                  }
                }
              }
            }
          },
          "400": { "description": "Invalid file type or size exceeded." },
          "500": { "description": "Internal server error." }
        }
      }
    },
    "/documents/{id}/analyze": {
      "post": {
        "summary": "Analyze a document with an LLM.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "LLM analysis returned. Response contains `file_info`, `metadata`, and `analysis` inside `data`.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessDocumentDetail"
                },
                "examples": {
                  "sample": {
                    "summary": "Example analysis response",
                    "value": {
                      "statusCode": 200,
                      "message": { "text": "Analysis complete" },
                      "data": {
                        "file_info": {
                          "id": "123e4567-e89b-12d3-a456-426614174000",
                          "filename": "invoice.pdf",
                          "size": 23456,
                          "mime_type": "application/pdf",
                          "s3_url": "http://localhost:9000/documents/invoice.pdf",
                          "s3_key": "invoice.pdf",
                          "local_path": null,
                          "created_at": "2025-12-07T13:23:18.600Z",
                          "updated_at": "2025-12-07T13:23:18.600Z"
                        },
                        "metadata": {
                          "extracted_text": "This invoice is for...",
                          "extracted_metadata": {
                            "date": "2025-01-01",
                            "sender": "ACME Corp",
                            "total_amount": "123.45"
                          }
                        },
                        "analysis": {
                          "summary": "Short summary of the document",
                          "document_type": "invoice",
                          "attributes": {
                            "date": "2025-01-01",
                            "total_amount": "123.45"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": { "description": "Document not found." },
          "409": { "description": "Document text not extracted yet." },
          "500": { "description": "Internal server error." }
        }
      }
    },
    "/documents/{id}": {
      "get": {
        "summary": "Get document metadata, extracted text, and LLM analysis.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Document data returned. Response contains `file_info`, `metadata`, and `analysis` inside `data`.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessDocumentDetail"
                }
              }
            }
          },
          "404": { "description": "Document not found." },
          "500": { "description": "Internal server error." }
        }
      }
    },
    "/documents": {
      "get": {
        "summary": "List all uploaded documents with file info, metadata, and analysis.",
        "responses": {
          "200": {
            "description": "List of documents returned.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "statusCode": { "type": "integer" },
                    "message": { "type": "object" },
                    "data": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/DocumentDetail" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "OpenRouterAPIKey": {
        "type": "apiKey",
        "in": "header",
        "name": "Authorization",
        "description": "Pass your OpenRouter API key in the Authorization header as Bearer <key> when invoking LLM-related endpoints in the API docs. In practice, the server uses its own key (OPENROUTER_API_KEY) for calls to OpenRouter."
      }
    },
    "schemas": {
      "AnalyzeResponse": {
        "type": "object",
        "properties": {
          "summary": { "type": "string" },
          "document_type": { "type": "string" },
          "attributes": { "type": "object", "additionalProperties": true }
        }
      },

      "Document_GET": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "filename": { "type": "string" },
          "size": { "type": "integer" },
          "mime_type": { "type": "string" },
          "s3_link": { "type": "string" },
          "s3_url": { "type": "string" },
          "s3_key": { "type": "string" },
          "local_path": { "type": "string" },
          "extracted_text": { "type": "string" },
          "analysis": { "$ref": "#/components/schemas/AnalyzeResponse" },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" }
        }
      },
      "DocumentDetail": {
        "type": "object",
        "properties": {
          "file_info": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "filename": { "type": "string" },
              "size": { "type": "integer" },
              "mime_type": { "type": "string" },
              "s3_url": { "type": "string" },
              "s3_key": { "type": "string" },
              "local_path": { "type": "string" },
              "created_at": { "type": "string", "format": "date-time" },
              "updated_at": { "type": "string", "format": "date-time" }
            }
          },
          "metadata": {
            "type": "object",
            "properties": {
              "extracted_text": { "type": "string" },
              "extracted_metadata": {
                "type": "object",
                "additionalProperties": true
              }
            }
          },
          "analysis": { "$ref": "#/components/schemas/AnalyzeResponse" }
        }
      },
      "SuccessDocumentDetail": {
        "type": "object",
        "properties": {
          "statusCode": { "type": "integer" },
          "message": { "type": "object" },
          "data": { "$ref": "#/components/schemas/DocumentDetail" }
        }
      }
    }
  }
}
